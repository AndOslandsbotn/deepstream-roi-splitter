
{
  "name": "GStreamer Dev",
  "build": {
    "dockerfile": "Dockerfile.gst",
    "context": ".."
  },
  "remoteUser": "you",
  "containerUser": "you",
  "runArgs": [
    "--network=host",
    "--privileged",
    "--gpus=all",
    "--env=DISPLAY=${env:DISPLAY}",
    "--volume=/tmp/.X11-unix:/tmp/.X11-unix:rw",
    "--volume=/mnt/wslg:/mnt/wslg:rw",
    "--device=/dev/dri:/dev/dri"
  ],
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}"
  },
  "remoteEnv": {
    "SSH_AUTH_SOCK": "${localEnv:SSH_AUTH_SOCK}"
  }
}
